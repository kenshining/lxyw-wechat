/* pages/news/new_products.wxss */
/**index.wxss**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.scroll-view{
  width: 100%;
  height: 100%;
}
.scroll-view .list{
  margin: 20rpx 10rpx;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-content: flex-start;
  height: 150rpx;
}
.scroll-view .list .item:nth-child(2){
  padding-left: 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  width: 100%;
}
.scroll-view .list .title{
  width: 100%;
}
.scroll-view .list .subtitle{
  color: #666;
  font-size: 20rpx;
  text-indent: 2em;
  height: 64rpx;
  width: 100%;
  padding-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
}
.scroll-view .list .more{
  padding-top: 5rpx;
  text-align: right;
  padding-right: 20rpx;
}
.scroll-view .list .more .button{
  display: inline-block;
  cursor: pointer;
  font-size: 22rpx;
  border: 1rpx #3385ff solid;
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
  color: #3385ff;
}