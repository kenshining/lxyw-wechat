/* pages/customer/customer_service.wxss */
.searchBar{
  height: 84rpx;
  width: 100%;
  position:fixed;
  top:0;
  z-index: 999;
  background-color: white;
}
.searchBar .middle{
  width: 80%;
  margin-left: 10%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}
.searchBar input{
  border: 1px #CCC solid;
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
  margin: 0 auto;
  font-size: 20rpx;
  width: 100%;
}
.searchBar image{
  margin-left: 10rpx;
  width: 70rpx;
  height: 60rpx;
}
.model-title{
  width: 100%;
  font-size: 30rpx;
  padding-left: 16rpx;
}
.model-sub{
  color: darkgray;
  font-size: 22rpx;
  margin-left: 20rpx;
}
.model-title-space{
    margin-top: 104rpx;
}
.liner{
  height: 1px;
  width: 100%;
  margin-left: 16rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  border-top: 1px darkgray solid;
}
.scroll-show{
  width: auto;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
}
.scroll-show .show-item{
  width: 300rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  height: auto;
}
.scroll-show .show-item image{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
  border-radius: 8rpx;
}
.scroll-show .show-item .item-title{
  display: block;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 0;
}
.scroll-show .show-item .item-sub-title{
  display: block;
  font-size: 22rpx;
  text-align: center;
  width: 100%;
  color: darkgray;
}
.qa-scroll{
  width: 100%;
  padding: 0 16rpx;
  height: 600rpx;
}
.qa-scroll .qa-item{
  padding-right: 16rpx;
  border-bottom: 1rpx darkgray dashed;
}
.qa-scroll .qa-item .item-Q{
  font-size: 28rpx;
  padding: 10rpx 0;
}
.qa-scroll .qa-item .item-A{
  font-size: 28rpx;
  color: darkgrey;
  padding: 10rpx 0;
}